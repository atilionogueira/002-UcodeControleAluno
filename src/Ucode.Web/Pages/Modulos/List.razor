@page "/modulos"
@inherits ListModulosPage

<MudText Typo="Typo.h3">Lista de Módulos</MudText>
<div class="d-flex justify-end">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.TwoTone.Add" Href="/modulos/adicionar">Adicionar</MudButton>
</div>

<MudDataGrid Class="mt-4" Items="@InputModel" Filterable="true" QuickFilter="Filter" Hideable="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Módulos</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="SearchTerm"
                      Placeholder="Filtrar..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      IconSize="Size.Medium"
                      Class="mt-0" />
    </ToolBarContent>
    <Columns>        
        <PropertyColumn Property="x => x.Id" Title="ID" />
        <PropertyColumn Property="x => x.Curso.Nome" Title="Curso" Flexible="true" />
        <PropertyColumn Property="x => x.SubTopico" Title="Sub-Tópico" Flexible="true" />
        <PropertyColumn Property="x => x.Secao" Title="Seção" Flexible="true" />
      
        <TemplateColumn Class="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Href="@($"/modulos/editar/{context.Item.Id}")"
                                   Color="Color.Primary" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   aria-label="Excluir"
                                   OnClick="() => OnDeleteButtonClickedAsync(context.Item.Id, context.Item.SubTopico)" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
